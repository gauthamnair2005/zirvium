# Zirvium Kernel Configuration
# Automatically generated - do not edit manually

#
# General Setup
#
CONFIG_KERNEL_VERSION="0.1.0"
CONFIG_LOCALVERSION=""
CONFIG_COMPRESS_KERNEL=y

#
# Processor type and features
#
CONFIG_X86_64=y
CONFIG_SMP=n
CONFIG_NR_CPUS=1

#
# Memory Management
#
CONFIG_PHYSICAL_MEMORY_MANAGER=y
CONFIG_VIRTUAL_MEMORY_MANAGER=y
CONFIG_KERNEL_HEAP=y
CONFIG_PAGE_SIZE_4K=y

#
# Process Management
#
CONFIG_PROCESS_MANAGEMENT=y
CONFIG_SCHEDULER_ROUND_ROBIN=y
CONFIG_MAX_PROCESSES=256

#
# File Systems
#
CONFIG_VFS=y
CONFIG_DEVFS=n
CONFIG_PROCFS=n

#
# System Calls
#
CONFIG_SYSCALLS=y
CONFIG_SYSCALL_READ=y
CONFIG_SYSCALL_WRITE=y
CONFIG_SYSCALL_OPEN=y
CONFIG_SYSCALL_CLOSE=y
CONFIG_SYSCALL_FORK=y
CONFIG_SYSCALL_EXEC=y
CONFIG_SYSCALL_EXIT=y
CONFIG_SYSCALL_GETPID=y
CONFIG_SYSCALL_KILL=y

#
# Device Drivers
#
CONFIG_CONSOLE_DRIVER=y
CONFIG_CONSOLE_VGA=y
CONFIG_SERIAL_DRIVER=n
CONFIG_KEYBOARD_DRIVER=n
CONFIG_TIMER_DRIVER=n

#
# Debugging
#
CONFIG_DEBUG=n
CONFIG_DEBUG_VERBOSE=n
CONFIG_PANIC_ON_ERROR=y
