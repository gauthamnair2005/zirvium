# Zirvium Kernel Configuration
# Generated by menuconfig


# General Setup
CONFIG_COMPRESS_KERNEL=y
CONFIG_KERNEL_GZIP=y
CONFIG_MODULAR=y

# Architecture
CONFIG_X86_64=y
CONFIG_ARM64=n
CONFIG_RISCV=n
CONFIG_PPC=n

# Processor Features
CONFIG_SMP=y
CONFIG_HYPER_THREADING=y
CONFIG_NR_CPUS=y

# Networking
CONFIG_NET=y
CONFIG_INET=y
CONFIG_IPV6=y
CONFIG_WIRELESS=y

# Network Drivers
CONFIG_REALTEK_8169=y
CONFIG_INTEL_E1000=y
CONFIG_BROADCOM_TIGON3=y
CONFIG_INTEL_WIFI=y
CONFIG_BROADCOM_WIFI=y

# Input Devices
CONFIG_INPUT_KEYBOARD=y
CONFIG_KEYBOARD_USB=y
CONFIG_KEYBOARD_RGB=y
CONFIG_INPUT_MOUSE=y
CONFIG_INPUT_TOUCHPAD=y
CONFIG_INPUT_TOUCHSCREEN=y

# USB Support
CONFIG_USB_SUPPORT=y
CONFIG_USB_XHCI_HCD=y
CONFIG_USB_EHCI_HCD=y
CONFIG_USB4=y

# Graphics
CONFIG_DRM=y
CONFIG_DRM_NVIDIA=y
CONFIG_DRM_AMD=y
CONFIG_DRM_INTEL=y
CONFIG_FB_VESA=y

# Display
CONFIG_HDMI_SUPPORT=y
CONFIG_DISPLAY_PORT=y
CONFIG_EDP_SUPPORT=y
CONFIG_VGA_SUPPORT=y

# Audio
CONFIG_SOUND=y
CONFIG_SND_HDA_INTEL=y
CONFIG_SND_HDA_AMD=y
CONFIG_SND_USB_AUDIO=y

# Bluetooth
CONFIG_BT=y
CONFIG_BT_INTEL=y
CONFIG_BT_BROADCOM=y

# Sensors
CONFIG_SENSORS=y
CONFIG_SENSORS_ACCEL=y
CONFIG_SENSORS_GYRO=y
CONFIG_SENSORS_PROXIMITY=y
CONFIG_SENSORS_LIGHT=y
CONFIG_SENSORS_FINGERPRINT=y

# Webcams
CONFIG_VIDEO_WEBCAM=y
CONFIG_WEBCAM_LOGITECH=y
CONFIG_WEBCAM_MICROSOFT=y
CONFIG_WEBCAM_GENERIC=y

# Storage
CONFIG_ATA=y
CONFIG_NVME=y
CONFIG_MMC=y
CONFIG_CDROM=y

# Cryptography
CONFIG_CRYPTO=y
CONFIG_CRYPTO_AES=y
CONFIG_CRYPTO_SHA256=y

# Virtualization
CONFIG_HYPERVISOR_GUEST=y
CONFIG_KVM_GUEST=y
CONFIG_VMWARE_GUEST=y
CONFIG_VIRTIO=y
