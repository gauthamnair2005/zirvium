menu "ACPI & Firmware"

config ACPI_WMI
    tristate "WMI (Windows Management Instrumentation)"
    default y
    depends on ACPI
    help
      ACPI-WMI mapping driver (required for laptop extras).

config ACPI_VIDEO
    tristate "ACPI Video driver"
    default y
    depends on ACPI
    help
      ACPI video extensions for brightness control.

config ACPI_BUTTON
    tristate "ACPI button driver"
    default y
    depends on ACPI
    help
      Power button, sleep button, and lid switch.

config ACPI_FAN
    tristate "ACPI fan driver"
    default y
    depends on ACPI

config ACPI_THERMAL
    tristate "ACPI thermal zone"
    default y
    depends on ACPI
    help
      Thermal management via ACPI.

config ACPI_BATTERY
    tristate "ACPI battery driver"
    default y
    depends on ACPI
    help
      Battery status and information.

config ACPI_AC
    tristate "ACPI AC adapter driver"
    default y
    depends on ACPI
    help
      AC adapter status detection.

config ACPI_PROCESSOR
    tristate "ACPI processor driver"
    default y
    depends on ACPI
    help
      CPU frequency and power management.

config ACPI_CPPC
    bool "ACPI CPPC support"
    default y
    depends on ACPI_PROCESSOR
    help
      Collaborative Processor Performance Control.

config EFI
    bool "EFI runtime service support"
    default y
    depends on X86_64 || ARM64
    help
      Extensible Firmware Interface support.

config EFI_VARS
    tristate "EFI variable support"
    default y
    depends on EFI

config EFI_ESRT
    bool "EFI System Resource Table"
    default y
    depends on EFI
    help
      Firmware update information.

config EFI_CAPSULE_LOADER
    tristate "EFI capsule loader"
    default m
    depends on EFI

config DMIID
    bool "Export DMI identification via sysfs"
    default y
    help
      System DMI information in /sys/class/dmi/id/.

endmenu

menu "Memory Technology Devices (MTD)"

config MTD
    tristate "Memory Technology Device support"
    default m
    help
      Flash memory, ROM, RAM device support.

config MTD_BLOCK
    tristate "MTD block device"
    default m
    depends on MTD

config MTD_CHAR
    tristate "MTD character device"
    default m
    depends on MTD

config MTD_NAND
    tristate "NAND flash support"
    default m
    depends on MTD

config MTD_SPI_NOR
    tristate "SPI NOR flash support"
    default m
    depends on MTD && SPI

endmenu

menu "Multi-Function Devices (MFD)"

config MFD_CORE
    bool
    default y

config MFD_INTEL_LPSS
    tristate "Intel Low Power Subsystem"
    default y
    depends on MFD_CORE && (X86_64 || X86_32)
    help
      Intel LPSS (I2C, SPI, UART controllers).

config MFD_INTEL_PMC_BXT
    tristate "Intel PMC driver for Broxton"
    default y
    depends on MFD_CORE

endmenu

menu "Remote Processor Support"

config REMOTEPROC
    tristate "Remote processor support"
    default m
    help
      Framework for controlling remote processors (DSPs, etc).

endmenu

menu "Kernel Hacking"

config MAGIC_SYSRQ
    bool "Magic SysRq key"
    default y
    help
      Enable magic SysRq key combinations for emergency operations.

config STACKTRACE
    bool
    default y

config STACK_VALIDATION
    bool "Stack validation"
    default y
    depends on X86_64

config DEBUG_FS
    bool "Debug filesystem"
    default y
    help
      debugfs mounted at /sys/kernel/debug.

config DEBUG_KERNEL
    bool "Kernel debugging"
    default n

config DEBUG_INFO
    bool "Compile with debug info"
    default n
    depends on DEBUG_KERNEL
    help
      Include debugging symbols (DWARF).

config DEBUG_INFO_DWARF4
    bool "Generate DWARF4 debug info"
    default y
    depends on DEBUG_INFO

config DEBUG_MEMORY
    bool "Memory debugging"
    default n
    depends on DEBUG_KERNEL

config DEBUG_PAGEALLOC
    bool "Debug page allocations"
    default n
    depends on DEBUG_KERNEL && !HIBERNATION
    help
      Detect memory corruption caused by page allocator bugs.

config DEBUG_OBJECTS
    bool "Debug object tracking"
    default n
    depends on DEBUG_KERNEL

config DEBUG_SLAB
    bool "Debug slab allocations"
    default n
    depends on DEBUG_KERNEL

config DEBUG_SPINLOCK
    bool "Spinlock debugging"
    default n
    depends on DEBUG_KERNEL && SMP

config DEBUG_MUTEXES
    bool "Mutex debugging"
    default n
    depends on DEBUG_KERNEL

config DEBUG_LOCK_ALLOC
    bool "Lock usage debugging"
    default n
    depends on DEBUG_KERNEL

config DEBUG_STACKOVERFLOW
    bool "Check for stack overflows"
    default n
    depends on DEBUG_KERNEL

config DEBUG_STACK_USAGE
    bool "Stack utilization instrumentation"
    default n
    depends on DEBUG_KERNEL

config DEBUG_LIST
    bool "Debug linked lists"
    default n
    depends on DEBUG_KERNEL
    help
      Check list_add/list_del operations for corruption.

config DEBUG_NOTIFIERS
    bool "Debug notifier chains"
    default n
    depends on DEBUG_KERNEL

config DEBUG_CREDENTIALS
    bool "Debug credential management"
    default n
    depends on DEBUG_KERNEL

config KGDB
    bool "KGDB: kernel debugger"
    default n
    depends on DEBUG_KERNEL
    help
      Kernel debugger using GDB protocol.

config KGDB_SERIAL_CONSOLE
    bool "KGDB over serial port"
    default y
    depends on KGDB

config KGDB_KDB
    bool "KGDB KDB frontend"
    default y
    depends on KGDB

config GDB_SCRIPTS
    bool "Provide GDB scripts"
    default y
    depends on DEBUG_INFO
    help
      Python GDB scripts for kernel debugging.

config FRAME_POINTER
    bool "Compile with frame pointers"
    default n
    help
      Better stack traces at the cost of performance.

config FTRACE
    bool "Kernel function tracer"
    default n
    help
      Function call tracing for performance analysis.

config FUNCTION_TRACER
    bool "Function tracer"
    default n
    depends on FTRACE

config DYNAMIC_FTRACE
    bool "Dynamic function tracing"
    default y
    depends on FUNCTION_TRACER

config STACK_TRACER
    bool "Trace max stack"
    default n
    depends on FTRACE

config IRQSOFF_TRACER
    bool "Interrupts-off tracer"
    default n
    depends on FTRACE

config SCHED_TRACER
    bool "Scheduling latency tracer"
    default n
    depends on FTRACE

config TRACER_SNAPSHOT
    bool "Tracer snapshot"
    default n
    depends on FTRACE

config BPF_SYSCALL
    bool "Enable BPF system call"
    default y
    help
      Berkeley Packet Filter for tracing and networking.

config BPF_JIT
    bool "BPF JIT compiler"
    default y
    depends on BPF_SYSCALL

config BPF_JIT_ALWAYS_ON
    bool "Always compile BPF to native code"
    default n
    depends on BPF_JIT

endmenu

# Include comprehensive driver database (12,787 drivers)
source "Kconfig.drivers"
