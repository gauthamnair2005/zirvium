menu "Wireless LAN"

config WLAN
    bool "Wireless LAN support"
    default y
    depends on NETDEVICES

config CFG80211
    tristate "cfg80211 wireless extensions compatibility"
    default y
    depends on WLAN

config MAC80211
    tristate "Generic IEEE 802.11 networking stack"
    default y
    depends on CFG80211

menu "Realtek Wireless"

config RTL8723DE
    tristate "Realtek RTL8723DE PCIe Wireless (PRIORITY)"
    default y
    depends on WLAN
    select MAC80211
    select CFG80211
    help
      *** HIGH PRIORITY DRIVER ***
      Realtek RTL8723DE PCIe Wireless Network Adapter.
      Common in laptops, supports 802.11b/g/n and Bluetooth.
      This is a combo chip with integrated WiFi and Bluetooth.

config RTL8723DE_BT
    tristate "Realtek RTL8723DE Bluetooth"
    default y
    depends on RTL8723DE && BT
    help
      Bluetooth support for RTL8723DE combo chip.

config RTL8192CE
    tristate "Realtek RTL8192CE/RTL8188CE"
    default y
    depends on WLAN

