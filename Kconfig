# Zirvium Kernel Configuration
# Professional Linux-like configuration system

mainmenu "Zirvium Kernel Configuration"

config KERNEL_VERSION
    string "Kernel version"
    default "1.0.0"

config LOCALVERSION
    string "Local version - append to kernel release"
    default ""
    help
      Append a custom string to the kernel version.

menu "General Setup"

config EXPERIMENTAL
    bool "Prompt for development and/or incomplete code/drivers"
    default n
    help
      Enable experimental features and drivers that are under development.

config KERNEL_NAME
    string "Kernel name"
    default "Zirvium"

config COMPRESS_KERNEL
    bool "Compress kernel image"
    default y
    help
      Compress the kernel image with gzip to reduce size.

choice
    prompt "Kernel compression mode"
    default KERNEL_GZIP
    depends on COMPRESS_KERNEL

config KERNEL_GZIP
    bool "Gzip"
    help
      The old and tried gzip compression. Fast and widely supported.

config KERNEL_BZIP2
    bool "Bzip2"
    help
      Better compression than gzip, but slower.

config KERNEL_LZMA
    bool "LZMA"
    help
      Excellent compression, but slow decompression.

config KERNEL_XZ
    bool "XZ"
    help
      Modern compression with excellent ratio.

config KERNEL_LZO
    bool "LZO"
    help
      Fast compression and decompression.

config KERNEL_LZ4
    bool "LZ4"
    help
      Extremely fast compression and decompression.

config KERNEL_ZSTD
    bool "ZSTD"
    help
      Modern compression with good ratio and speed balance.

endchoice

config PRINTK
    bool "Enable kernel logging"
    default y
    help
      Enable printk() for kernel messages.

config EARLY_PRINTK
    bool "Early printk support"
    default y
    depends on PRINTK
    help
      Enable printk before console initialization.

config DEBUG_KERNEL
    bool "Kernel debugging"
    default n
    help
      Enable kernel debugging features.

config DEBUG_INFO
    bool "Compile with debug info"
    default n
    depends on DEBUG_KERNEL
    help
      Compile kernel with debugging symbols.

config KALLSYMS
    bool "Load kernel symbol table"
    default y
    help
      Load kernel symbols for debugging and stack traces.

config PROFILING
    bool "Profiling support"
    default n
    help
      Enable profiling of kernel code.

endmenu

menu "Processor Type and Features"

choice
    prompt "Processor family"
    default X86_64

config X86_64
    bool "x86_64 (Intel/AMD 64-bit)"
    help
      Support for 64-bit x86 processors from Intel and AMD.
      Includes support for Intel Core, Xeon, AMD Ryzen, EPYC.

config X86_32
    bool "x86 (i386/i686 32-bit)"
    help
      Support for 32-bit x86 processors (Pentium and newer).

config ARM64
    bool "ARM64 (AArch64)"
    help
      Support for 64-bit ARM processors (ARMv8-A and newer).
      Used in smartphones, tablets, and ARM servers.

config ARM32
    bool "ARM (32-bit)"
    help
      Support for 32-bit ARM processors (ARMv7).

config RISCV64
    bool "RISC-V (64-bit)"
    help
      Support for 64-bit RISC-V processors.

config RISCV32
    bool "RISC-V (32-bit)"
    help
      Support for 32-bit RISC-V processors.

config PPC64
    bool "PowerPC 64-bit"
    help
      Support for 64-bit PowerPC (POWER7, POWER8, POWER9, POWER10).

config PPC32
    bool "PowerPC 32-bit"
    help
      Support for 32-bit PowerPC processors.

config XTENSA
    bool "Xtensa"
    help
      Support for Tensilica Xtensa processors (ESP32, etc).

endchoice

config SMP
    bool "Symmetric multi-processing support"
    default y
    help
      Enable support for systems with multiple CPU cores.

config NR_CPUS
    int "Maximum number of CPUs"
    range 1 8192
    default "64"
    depends on SMP
    help
      Maximum number of CPUs the kernel can support.

config HYPER_THREADING
    bool "Hyper-Threading / SMT support"
    default y
    depends on SMP
    help
      Enable Intel Hyper-Threading or AMD SMT support.

config SCHED_SMT
    bool "SMT (Hyperthreading) scheduler support"
    default y
    depends on SMP && HYPER_THREADING

config NUMA
    bool "NUMA (Non-Uniform Memory Access) support"
    default n
    depends on SMP && X86_64
    help
      Enable support for NUMA systems.

config CPU_FREQ
    bool "CPU Frequency scaling"
    default y
    help
      Enable CPU frequency scaling for power management.

config ACPI
    bool "ACPI support"
    default y
    depends on X86_64 || X86_32 || ARM64
    help
      Advanced Configuration and Power Interface support.

config APM
    bool "APM (Advanced Power Management) support"
    default n
    depends on X86_32
    help
      Legacy power management support for older systems.

endmenu

menu "Power Management"

config PM
    bool "Power Management support"
    default y
    help
      Enable power management features.

config PM_SLEEP
    bool "Suspend and hibernation"
    default y
    depends on PM

config SUSPEND
    bool "Suspend to RAM"
    default y
    depends on PM_SLEEP

config HIBERNATION
    bool "Hibernation (suspend to disk)"
    default y
    depends on PM_SLEEP

config PM_RUNTIME
    bool "Runtime PM"
    default y
    depends on PM

endmenu

menu "Memory Management"

config PHYSICAL_MEMORY_MANAGER
    bool "Physical memory manager"
    default y
    help
      Manage physical RAM allocation.

config VIRTUAL_MEMORY_MANAGER
    bool "Virtual memory manager"
    default y
    help
      Provide virtual memory support with paging.

config PAGING
    bool "Paging support"
    default y
    depends on VIRTUAL_MEMORY_MANAGER

config MEMORY_HOTPLUG
    bool "Memory hotplug support"
    default n
    help
      Allow adding and removing memory at runtime.

config PAGE_SIZE_4KB
    bool "4KB page size"
    default y

config HIGHMEM
    bool "High memory support"
    default y
    depends on X86_32

config TRANSPARENT_HUGEPAGE
    bool "Transparent Huge Pages"
    default y
    depends on X86_64 || ARM64
    help
      Automatically use huge pages to reduce TLB pressure.

config SWAP
    bool "Swap support"
    default y
    help
      Enable swapping to disk.

config ZSWAP
    bool "Compressed swap cache"
    default n
    depends on SWAP
    help
      Compress swap pages before writing to disk.

endmenu

menu "File Systems"

config VFS
    bool "Virtual File System"
    default y
    help
      Core VFS layer for filesystem abstraction.

config EXT2_FS
    tristate "Ext2 file system"
    default m
    help
      Second extended filesystem support.

config EXT3_FS
    tristate "Ext3 file system"
    default m
    help
      Third extended filesystem with journaling.

config EXT4_FS
    tristate "Ext4 file system"
    default y
    help
      Fourth extended filesystem (recommended).

config XFS_FS
    tristate "XFS file system"
    default m
    help
      SGI XFS high-performance filesystem.

config BTRFS_FS
    tristate "Btrfs file system"
    default m
    help
      B-tree filesystem with snapshots and compression.

config F2FS_FS
    tristate "F2FS file system"
    default m
    help
      Flash-Friendly File System for SSDs.

config NTFS_FS
    tristate "NTFS file system (read-only)"
    default m
    help
      Windows NTFS filesystem support.

config NTFS3_FS
    tristate "NTFS3 file system (read-write)"
    default m
    help
      Modern NTFS driver with full read-write support.

config FAT_FS
    tristate "FAT file system"
    default m
    help
      MS-DOS FAT filesystem support.

config VFAT_FS
    tristate "VFAT file system"
    default m
    depends on FAT_FS
    help
      Windows 95 VFAT (long filename) support.

config EXFAT_FS
    tristate "exFAT file system"
    default m
    help
      Microsoft exFAT filesystem support.

config PROC_FS
    bool "proc file system"
    default y
    help
      Virtual /proc filesystem.

config SYSFS
    bool "sysfs file system"
    default y
    help
      Virtual /sys filesystem for device and driver info.

config DEVTMPFS
    bool "Maintain a devtmpfs filesystem"
    default y
    help
      Automatically populate /dev.

config TMPFS
    bool "tmpfs file system"
    default y
    help
      RAM-based temporary filesystem.

config FUSE_FS
    tristate "FUSE (Filesystem in Userspace)"
    default m
    help
      Allow userspace filesystems.

config OVERLAY_FS
    tristate "Overlay filesystem"
    default m
    help
      Layer one filesystem over another (used by Docker).

config NFS_FS
    tristate "NFS client support"
    default m
    help
      Network File System client.

config CIFS
    tristate "CIFS/SMB support"
    default m
    help
      Common Internet File System / Samba support.

endmenu

menu "Device Drivers"

source "drivers/Kconfig.drivers"

menu "Serial Drivers"

config SERIAL_8250
    tristate "8250/16550 and compatible serial support"
    default y
    help
      Standard PC serial port support (COM1, COM2, etc).
      Required for most systems.

config SERIAL_8250_NR_UARTS
    int "Maximum number of 8250/16550 serial ports"
    depends on SERIAL_8250
    default "4"
    help
      Set the maximum number of serial ports supported.

config SERIAL_PL011
    tristate "ARM PL011 serial port support"
    default y
    depends on ARM64 || ARM32
    help
      ARM AMBA PrimeCell PL011 UART support.

config SERIAL_SC16IS7XX
    tristate "SC16IS7xx serial driver"
    default m
    depends on SPI || I2C
    help
      NXP SC16IS7xx SPI/I2C serial port controller.

endmenu

menu "RTC (Real-Time Clock) Support"

config RTC_CLASS
    bool "RTC class"
    default y
    help
      Enable support for real-time clocks.

config RTC_DRV_CMOS
    tristate "CMOS/NVRAM RTC"
    default y
    depends on RTC_CLASS
    help
      Standard PC CMOS real-time clock (x86/x86_64).

config RTC_DRV_DS1307
    tristate "Dallas/Maxim DS1307/37/38/39/40/41/51"
    default m
    depends on RTC_CLASS && I2C
    help
      I2C RTC chips DS1307, DS1337, DS1338, DS1339, DS1340, DS1341, DS1351.

config RTC_DRV_DS3232
    tristate "Dallas/Maxim DS3232"
    default m
    depends on RTC_CLASS && I2C
    help
      High precision I2C RTC with integrated crystal.

config RTC_DRV_PCF8523
    tristate "NXP PCF8523"
    default m
    depends on RTC_CLASS && I2C

config RTC_DRV_PCF8563
    tristate "NXP PCF8563"
    default m
    depends on RTC_CLASS && I2C

config RTC_DRV_PL031
    tristate "ARM AMBA PL031 RTC"
    default y
    depends on RTC_CLASS && (ARM64 || ARM32)
    help
      ARM AMBA PrimeCell PL031 real-time clock.

endmenu

menu "Watchdog Timer Support"

config WATCHDOG
    bool "Watchdog timer support"
    default y
    help
      Enable watchdog timer support to reset the system on hangs.

config WATCHDOG_CORE
    bool
    default y
    depends on WATCHDOG

config SOFT_WATCHDOG
    tristate "Software watchdog"
    default m
    depends on WATCHDOG
    help
      Software-based watchdog timer.

config I6300ESB_WDT
    tristate "Intel 6300ESB watchdog"
    default y
    depends on WATCHDOG
    help
      Hardware watchdog for Intel 6300ESB chipset.

config iTCO_WDT
    tristate "Intel TCO watchdog"
    default y
    depends on WATCHDOG
    help
      Hardware watchdog in Intel chipsets.

config SP5100_TCO
    tristate "AMD/ATI SP5100 TCO watchdog"
    default y
    depends on WATCHDOG
    help
      Hardware watchdog for AMD chipsets.

config BCM2835_WDT
    tristate "Broadcom BCM2835 watchdog"
    default y
    depends on WATCHDOG && (ARM64 || ARM32)
    help
      Watchdog for Raspberry Pi.

endmenu

menu "Hardware Monitoring (hwmon) Support"

config HWMON
    tristate "Hardware Monitoring support"
    default y
    help
      Temperature, voltage, and fan monitoring.

config HWMON_VID
    tristate
    default y if HWMON

config SENSORS_CORETEMP
    tristate "Intel Core temperature sensor"
    default y
    depends on HWMON && X86_64
    help
      Monitor Intel CPU core temperatures.

config SENSORS_K10TEMP
    tristate "AMD K10/Zen temperature sensor"
    default y
    depends on HWMON && X86_64
    help
      Monitor AMD Ryzen/EPYC CPU temperatures.

config SENSORS_IT87
    tristate "ITE IT87xx and compatibles"
    default y
    depends on HWMON
    help
      Super I/O chip with temperature/voltage/fan monitoring.

config SENSORS_LM75
    tristate "LM75 and compatibles"
    default y
    depends on HWMON && I2C

config SENSORS_NCT6775
    tristate "Nuvoton NCT6775F and compatibles"
    default y
    depends on HWMON
    help
      Common Super I/O chip in motherboards.

config SENSORS_ASUS_EC
    tristate "ASUS EC Sensors"
    default y
    depends on HWMON
    help
      ASUS motherboard embedded controller sensors.

config SENSORS_NZXT_KRAKEN
    tristate "NZXT Kraken AIO coolers"
    default m
    depends on HWMON && USB

endmenu

menu "GPIO Support"

config GPIOLIB
    bool "GPIO Support"
    default y
    help
      General Purpose Input/Output support.

config GPIO_SYSFS
    bool "GPIO sysfs interface"
    default y
    depends on GPIOLIB
    help
      Export GPIO pins via /sys/class/gpio.

config GPIO_CDEV
    bool "GPIO character device"
    default y
    depends on GPIOLIB
    help
      Modern GPIO character device interface.

config GPIO_INTEL
    tristate "Intel GPIO"
    default y
    depends on GPIOLIB && X86_64

config GPIO_AMD
    tristate "AMD GPIO"
    default y
    depends on GPIOLIB && X86_64

config GPIO_BCM2835
    tristate "Broadcom BCM2835 GPIO"
    default y
    depends on GPIOLIB && (ARM64 || ARM32)

config GPIO_PCA953X
    tristate "PCA95[357]x, TCA64xx GPIO expanders"
    default m
    depends on GPIOLIB && I2C

endmenu

menu "DMA Engine Support"

config DMADEVICES
    bool "DMA Engine support"
    default y
    help
      DMA controller support for high-speed data transfers.

config INTEL_IDMA64
    tristate "Intel integrated DMA 64-bit"
    default y
    depends on DMADEVICES && X86_64

config INTEL_IOATDMA
    tristate "Intel I/OAT DMA"
    default y
    depends on DMADEVICES && X86_64
    help
      Intel I/O Acceleration Technology DMA engine.

config DW_DMAC
    tristate "Synopsys DesignWare DMA"
    default y
    depends on DMADEVICES

config PL330_DMA
    tristate "ARM PL330 DMA controller"
    default y
    depends on DMADEVICES && (ARM64 || ARM32)

endmenu

menu "PCIe/PCI Support"

config PCI
    bool "PCI support"
    default y
    help
      Peripheral Component Interconnect bus support.

config PCIEPORTBUS
    bool "PCI Express Port Bus support"
    default y
    depends on PCI
    help
      PCIe root port and switch port services.

config PCIEAER
    bool "PCI Express Advanced Error Reporting"
    default y
    depends on PCIEPORTBUS
    help
      PCIe AER for error detection and reporting.

config PCIEASPM
    bool "PCI Express ASPM control"
    default y
    depends on PCIEPORTBUS
    help
      Active State Power Management for power savings.

config PCIE_DPC
    bool "PCI Express Downstream Port Containment"
    default y
    depends on PCIEPORTBUS
    help
      Error containment for PCIe links.

config HOTPLUG_PCI
    tristate "PCI hotplug support"
    default y
    depends on PCI
    help
      Hot-pluggable PCI devices support.

config HOTPLUG_PCI_PCIE
    tristate "PCIe hotplug support"
    default y
    depends on HOTPLUG_PCI
    help
      Native PCIe hotplug support.

endmenu

menu "CAN Bus Support"

config CAN
    tristate "CAN bus support"
    default m
    help
      Controller Area Network (automotive/industrial).

config CAN_DEV
    tristate "CAN device drivers"
    default m
    depends on CAN

config CAN_CALC_BITTIMING
    bool "CAN bit-timing calculation"
    default y
    depends on CAN_DEV

config CAN_MCP251X
    tristate "Microchip MCP251x SPI CAN controllers"
    default m
    depends on CAN_DEV && SPI

config CAN_MCP251XFD
    tristate "Microchip MCP251xFD SPI CAN FD controllers"
    default m
    depends on CAN_DEV && SPI

config CAN_PEAK_USB
    tristate "PEAK USB CAN adapters"
    default m
    depends on CAN_DEV && USB

config CAN_KVASER_USB
    tristate "Kvaser USB CAN adapters"
    default m
    depends on CAN_DEV && USB

config CAN_SLCAN
    tristate "Serial / USB serial CAN adapters"
    default m
    depends on CAN_DEV

endmenu

menu "Thunderbolt Support"

config THUNDERBOLT
    tristate "Thunderbolt support"
    default y
    depends on PCI
    help
      Intel Thunderbolt 3/4 and USB4 support.

config USB4
    bool "USB4 support"
    default y
    depends on THUNDERBOLT
    help
      USB4 protocol support (Thunderbolt 3+ compatible).

config THUNDERBOLT_NET
    tristate "Thunderbolt networking"
    default m
    depends on THUNDERBOLT

endmenu

menu "NFC Support"

config NFC
    tristate "NFC subsystem support"
    default m
    help
      Near Field Communication support.

config NFC_DIGITAL
    tristate "NFC Digital Protocol stack"
    default m
    depends on NFC

config NFC_NCI
    tristate "NCI protocol support"
    default m
    depends on NFC

config NFC_PN533
    tristate "NXP PN533 USB"
    default m
    depends on NFC && USB
    help
      PN533 NFC controller via USB.

config NFC_PN533_I2C
    tristate "NXP PN533 I2C"
    default m
    depends on NFC && I2C

config NFC_PN532
    tristate "NXP PN532"
    default m
    depends on NFC

config NFC_PN544
    tristate "NXP PN544 NFC driver"
    default m
    depends on NFC && I2C

config NFC_ST21NFCA
    tristate "STMicroelectronics ST21NFCA"
    default m
    depends on NFC && I2C

endmenu

menu "RFID Support"

config RFID
    tristate "RFID subsystem support"
    default m
    help
      Radio-Frequency Identification support.

config RFID_RC522
    tristate "MFRC522 RFID reader"
    default m
    depends on RFID && SPI

config RFID_PN532_UART
    tristate "PN532 RFID via UART"
    default m
    depends on RFID

endmenu

menu "Industrial I/O Buses"

config MDIO_BUS
    tristate "MDIO bus support"
    default y
    help
      Management Data Input/Output (Ethernet PHY management).

config MDIO_BITBANG
    tristate "MDIO bitbanging"
    default m
    depends on MDIO_BUS

config MDIO_GPIO
    tristate "GPIO MDIO"
    default m
    depends on MDIO_BITBANG && GPIOLIB

endmenu

menu "Block Devices"

config BLK_DEV
    bool "Block device support"
    default y

config BLK_DEV_SD
    tristate "SCSI disk support"
    default y
    help
      Support for SCSI and SATA hard drives.

config BLK_DEV_SR
    tristate "SCSI CDROM support"
    default m
    help
      Support for SCSI CD/DVD drives.

config BLK_DEV_LOOP
    tristate "Loopback device support"
    default y
    help
      Access files as block devices.

config BLK_DEV_RAM
    tristate "RAM block device support"
    default y
    help
      RAM disk support.

config BLK_DEV_NBD
    tristate "Network block device support"
    default m
    help
      Block device over network.

config BLK_DEV_NVME
    tristate "NVMe support"
    default y
    help
      NVM Express SSD support.

endmenu

menu "ATA/ATAPI/MFM/RLL Support"

config ATA
    tristate "ATA/ATAPI support"
    default y
    help
      Serial and Parallel ATA support.

config SATA_AHCI
    tristate "AHCI SATA support"
    default y
    depends on ATA
    help
      Intel AHCI SATA controller support.

config ATA_PIIX
    tristate "Intel PIIX/ICH SATA support"
    default y
    depends on ATA

config SATA_NV
    tristate "NVIDIA SATA support"
    default m
    depends on ATA

config SATA_SIS
    tristate "SiS SATA support"
    default m
    depends on ATA

config SATA_VIA
    tristate "VIA SATA support"
    default m
    depends on ATA

config PATA_AMD
    tristate "AMD/NVidia PATA support"
    default m
    depends on ATA

config PATA_INTEL
    tristate "Intel PATA support"
    default m
    depends on ATA

endmenu

menu "SCSI Device Support"

config SCSI
    tristate "SCSI device support"
    default y

config SCSI_DMA
    bool "SCSI DMA support"
    default y
    depends on SCSI

config SCSI_PROC_FS
    bool "SCSI /proc support"
    default y
    depends on SCSI

config BLK_DEV_SD
    tristate "SCSI disk support"
    default y
    depends on SCSI

config CHR_DEV_SG
    tristate "SCSI generic support"
    default y
    depends on SCSI

endmenu

menu "USB Support"

config USB_SUPPORT
    bool "USB support"
    default y
    help
      Universal Serial Bus support.

config USB
    tristate "USB core"
    default y
    depends on USB_SUPPORT

config USB_XHCI_HCD
    tristate "xHCI (USB 3.0+) support"
    default y
    depends on USB
    help
      USB 3.0, 3.1, 3.2, 4.0 host controller support.

config USB_XHCI_PCI
    tristate "xHCI PCI mode"
    default y
    depends on USB_XHCI_HCD

config USB_EHCI_HCD
    tristate "EHCI (USB 2.0) support"
    default y
    depends on USB
    help
      USB 2.0 host controller support.

config USB_OHCI_HCD
    tristate "OHCI (USB 1.1) support"
    default y
    depends on USB
    help
      USB 1.1 OHCI host controller support.

config USB_UHCI_HCD
    tristate "UHCI (USB 1.1) support"
    default y
    depends on USB
    help
      USB 1.1 UHCI host controller support.

config USB_STORAGE
    tristate "USB Mass Storage support"
    default y
    depends on USB
    help
      USB flash drives, external hard drives, etc.

config USB_STORAGE_UAS
    tristate "USB Attached SCSI"
    default y
    depends on USB_STORAGE
    help
      Faster protocol for USB storage devices.

config USB_HID
    tristate "USB Human Interface Device support"
    default y
    depends on USB
    help
      USB keyboards, mice, tablets, etc.

config USB_KBD
    tristate "USB keyboard support"
    default y
    depends on USB_HID

config USB_MOUSE
    tristate "USB mouse support"
    default y
    depends on USB_HID

config USB_SERIAL
    tristate "USB Serial Converter support"
    default m
    depends on USB

config USB_ACM
    tristate "USB Modem (CDC ACM) support"
    default m
    depends on USB

config USB_PRINTER
    tristate "USB Printer support"
    default m
    depends on USB

config USB_TYPEC
    tristate "USB Type-C support"
    default y
    depends on USB
    help
      USB Type-C connector support.

config USB_PD
    tristate "USB Power Delivery"
    default y
    depends on USB_TYPEC
    help
      USB Power Delivery protocol support.

config USB4
    tristate "USB4/Thunderbolt support"
    default y
    depends on USB
    help
      USB4 and Thunderbolt 3/4 support.

endmenu

menu "Input Devices"

config INPUT
    bool "Input device support"
    default y

config INPUT_KEYBOARD
    bool "Keyboard support"
    default y
    depends on INPUT

config KEYBOARD_ATKBD
    tristate "AT keyboard"
    default y
    depends on INPUT_KEYBOARD
    help
      Standard PC/AT keyboard support.

config INPUT_MOUSE
    bool "Mouse support"
    default y
    depends on INPUT

config MOUSE_PS2
    tristate "PS/2 mouse"
    default y
    depends on INPUT_MOUSE

config MOUSE_SERIAL
    tristate "Serial mouse"
    default m
    depends on INPUT_MOUSE

config MOUSE_SYNAPTICS_I2C
    tristate "Synaptics I2C touchpad"
    default y
    depends on INPUT_MOUSE && I2C

config MOUSE_ELAN_I2C
    tristate "ELAN I2C touchpad"
    default y
    depends on INPUT_MOUSE && I2C

config TOUCHPAD
    bool "Touchpad support"
    default y
    depends on INPUT

config TOUCHPAD_SYNAPTICS
    tristate "Synaptics touchpad"
    default y
    depends on TOUCHPAD

config TOUCHPAD_ELAN
    tristate "ELAN touchpad"
    default y
    depends on TOUCHPAD

config TOUCHPAD_ALPS
    tristate "ALPS touchpad"
    default y
    depends on TOUCHPAD

config INPUT_TOUCHSCREEN
    bool "Touchscreen support"
    default y
    depends on INPUT

config TOUCHSCREEN_USB
    tristate "USB touchscreen"
    default m
    depends on INPUT_TOUCHSCREEN && USB

config INPUT_TABLET
    bool "Graphics tablet support"
    default y
    depends on INPUT

config TABLET_WACOM
    tristate "Wacom tablet support"
    default m
    depends on INPUT_TABLET

config INPUT_JOYSTICK
    bool "Joystick support"
    default y
    depends on INPUT

config JOYSTICK_XPAD
    tristate "Xbox controller support"
    default m
    depends on INPUT_JOYSTICK && USB

endmenu

menu "Graphics Support"

config FB
    tristate "Framebuffer support"
    default y
    help
      Generic framebuffer support.

config FB_VESA
    tristate "VESA VGA graphics"
    default y
    depends on FB

config FB_EFI
    tristate "EFI framebuffer"
    default y
    depends on FB

config DRM
    tristate "Direct Rendering Manager"
    default y
    help
      Modern graphics driver framework.

config DRM_KMS_HELPER
    bool "DRM KMS helper"
    default y
    depends on DRM

