# Zirvium Kernel Configuration

mainmenu "Zirvium Kernel Configuration"

config KERNEL_VERSION
    string "Kernel version"
    default "0.1.0"

config LOCALVERSION
    string "Local version - append to kernel release"
    default ""

menu "General Setup"

config COMPRESS_KERNEL
    bool "Compress kernel image"
    default y
    help
      Compress the kernel image with gzip to reduce size.
      The bootloader will decompress it at boot time.

endmenu

menu "Processor type and features"

config X86_64
    bool "64-bit kernel"
    default y

config SMP
    bool "Symmetric multi-processing support"
    default n
    help
      Enable support for systems with multiple CPUs.

config NR_CPUS
    int "Maximum number of CPUs"
    default 1
    range 1 256
    depends on SMP

endmenu

menu "Memory Management"

config PHYSICAL_MEMORY_MANAGER
    bool "Physical memory manager"
    default y

config VIRTUAL_MEMORY_MANAGER
    bool "Virtual memory manager"
    default y

config KERNEL_HEAP
    bool "Kernel heap allocator"
    default y

choice
    prompt "Page size"
    default PAGE_SIZE_4K

config PAGE_SIZE_4K
    bool "4 KB"

config PAGE_SIZE_2M
    bool "2 MB (Huge pages)"

endchoice

endmenu

menu "Process Management"

config PROCESS_MANAGEMENT
    bool "Process management"
    default y

choice
    prompt "Scheduler algorithm"
    default SCHEDULER_ROUND_ROBIN

config SCHEDULER_ROUND_ROBIN
    bool "Round-robin"

config SCHEDULER_PRIORITY
    bool "Priority-based"

endchoice

config MAX_PROCESSES
    int "Maximum number of processes"
    default 256
    range 16 65536

endmenu

menu "File Systems"

config VFS
    bool "Virtual File System"
    default y

config DEVFS
    bool "Device filesystem support"
    default n
    depends on VFS

config PROCFS
    bool "Proc filesystem support"
    default n
    depends on VFS

endmenu

menu "System Calls"

config SYSCALLS
    bool "System call support"
    default y

config SYSCALL_READ
    bool "read() system call"
    default y
    depends on SYSCALLS

config SYSCALL_WRITE
    bool "write() system call"
    default y
    depends on SYSCALLS

config SYSCALL_OPEN
    bool "open() system call"
    default y
    depends on SYSCALLS

config SYSCALL_CLOSE
    bool "close() system call"
    default y
    depends on SYSCALLS

config SYSCALL_FORK
    bool "fork() system call"
    default y
    depends on SYSCALLS

config SYSCALL_EXEC
    bool "exec() system call"
    default y
    depends on SYSCALLS

config SYSCALL_EXIT
    bool "exit() system call"
    default y
    depends on SYSCALLS

config SYSCALL_GETPID
    bool "getpid() system call"
    default y
    depends on SYSCALLS

config SYSCALL_KILL
    bool "kill() system call"
    default y
    depends on SYSCALLS

endmenu

menu "Device Drivers"

config CONSOLE_DRIVER
    bool "Console driver"
    default y

config CONSOLE_VGA
    bool "VGA text mode console"
    default y
    depends on CONSOLE_DRIVER

config SERIAL_DRIVER
    bool "Serial port driver"
    default n

config KEYBOARD_DRIVER
    bool "Keyboard driver"
    default n

config TIMER_DRIVER
    bool "Timer/PIT driver"
    default n

endmenu

menu "Debugging"

config DEBUG
    bool "Debugging support"
    default n

config DEBUG_VERBOSE
    bool "Verbose debugging output"
    default n
    depends on DEBUG

config PANIC_ON_ERROR
    bool "Panic on unrecoverable errors"
    default y

endmenu
