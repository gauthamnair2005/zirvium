bool "ARM Architecture"
help
  ARM 32-bit and 64-bit (AArch64) processors

config ARCH_ARM64
bool "ARM 64-bit (AArch64)"
depends on ARCH_ARM
help
  ARMv8-A 64-bit architecture

config ARCH_APPLE_SILICON
bool "Apple Silicon (M1/M2/M3/M4)"
depends on ARCH_ARM64
help
  Apple custom ARM processors

config ARCH_SNAPDRAGON
bool "Qualcomm Snapdragon"
depends on ARCH_ARM64
help
  Snapdragon 8xx/7xx/6xx series

config ARCH_RISCV
bool "RISC-V Architecture"
help
  Open-source RISC-V processors

config ARCH_RISCV32
bool "RISC-V 32-bit"
depends on ARCH_RISCV

config ARCH_RISCV64
bool "RISC-V 64-bit"
